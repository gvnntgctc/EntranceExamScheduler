<!DOCTYPE html>
<html>
<head>
  <title>Student Dashboard</title>
  <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <!-- Overlay -->
  <div class="sidebar-overlay" id="sidebarOverlay"></div>

  <button class="hamburger" id="hamburger"><i class="fas fa-bars"></i></button>
  
  <!-- Sidebar (Hidden by default) -->
  <div class="sidebar" id="sidebar">
    
    
    <div class="sidebar-header">
      <h2><i class="fas fa-user-graduate"></i> Student Panel</h2>
    </div>
    <ul class="sidebar-menu">
      <li><a href="/student" class="active"><i class="fas fa-tachometer-alt"></i> Dashboard</a></li>
      <li><a href="#schedule"><i class="fas fa-calendar-check"></i> My Schedule</a></li>
      <li><a href="/auth/logout"><i class="fas fa-sign-out-alt"></i> Logout</a></li>
    </ul>
  </div>
  
  <!-- Main Content -->
  <div class="main-content">
    
    
    <div class="container">
      <h1><i class="fas fa-calendar-alt"></i> Your Exam Schedule</h1>
      
      <div id="schedule" class="section-card">
        <% if (schedule) { %>
          <div class="schedule-card">
            <div class="schedule-card-header">
              <i class="fas fa-clipboard-check"></i>
              <h2>Your Upcoming Exam</h2>
            </div>
            <div class="schedule-card-body">
              <div class="schedule-item">
                <div class="schedule-icon">
                  <i class="fas fa-calendar-day"></i>
                </div>
                <div class="schedule-text">
                  <label>Date</label>
                  <span><%= schedule.examDate.toDateString() %></span>
                </div>
              </div>
              <div class="schedule-item">
                <div class="schedule-icon">
                  <i class="fas fa-clock"></i>
                </div>
                <div class="schedule-text">
                  <label>Time</label>
                  <span><%= schedule.examTime %></span>
                </div>
              </div>
              <div class="schedule-item">
                <div class="schedule-icon">
                  <i class="fas fa-map-marker-alt"></i>
                </div>
                <div class="schedule-text">
                  <label>Location</label>
                  <span><%= schedule.location %></span>
                </div>
              </div>
            </div>
            <div class="schedule-card-footer">
              <p><i class="fas fa-info-circle"></i> Please arrive 15 minutes before your scheduled time.</p>
            </div>
          </div>
        <% } else { %>
          <div class="no-schedule">
            <div class="no-schedule-icon">
              <i class="fas fa-calendar-times"></i>
            </div>
            <h2>No Schedule Yet</h2>
            <p>Your exam schedule has not been set by the admin yet.</p>
            <p>Please check back later or contact the administration.</p>
          </div>
        <% } %>
      </div>
    </div>
  </div>
  
  <script src="/js/script.js"></script>
</body>
</html>