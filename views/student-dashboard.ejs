<!DOCTYPE html>
<html>
<head>
  <title>Student Dashboard - Exam Scheduler</title>
  <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <!-- Overlay -->
  <div class="sidebar-overlay" id="sidebarOverlay"></div>
  
  <!-- Hamburger Button -->
  <button class="hamburger" id="hamburger"><i class="fas fa-bars"></i></button>
  
  <!-- Sidebar -->
  <div class="sidebar" id="sidebar">
    <button class="sidebar-close" id="sidebarClose"><i class="fas fa-times"></i></button>
    
    <div class="sidebar-header">
      <h2><i class="fas fa-user-graduate"></i> Student Panel</h2>
    </div>
    <ul class="sidebar-menu">
      <li><a href="/student" class="active"><i class="fas fa-tachometer-alt"></i> Dashboard</a></li>
      <li><a href="#schedule"><i class="fas fa-calendar-check"></i> My Schedule</a></li>
      <li><a href="/auth/logout"><i class="fas fa-sign-out-alt"></i> Logout</a></li>
    </ul>
  </div>
  
  <!-- Main Content -->
  <div class="main-content">
    <div class="container">
      <h1><i class="fas fa-tachometer-alt"></i> Welcome, <%= user.fullName %>!</h1>
      
      <div class="section-card" id="schedule">
        <h2><i class="fas fa-calendar-check"></i> My Exam Schedule</h2>
        
        <% if (!schedule) { %>
          <div class="no-data">
            <i class="fas fa-calendar-times"></i>
            <p>No exam schedule assigned yet.</p>
            <p class="sub-text">Please check back later or contact the admin.</p>
          </div>
        <% } else { %>
          <div class="schedule-card">
            <div class="schedule-card-header">
              <i class="fas fa-calendar-alt"></i>
              <span>Exam Details</span>
            </div>
            <div class="schedule-card-body">
              <div class="schedule-detail">
                <div class="detail-icon">
                  <i class="fas fa-calendar"></i>
                </div>
                <div class="detail-info">
                  <span class="detail-label">Date</span>
                  <span class="detail-value"><%= new Date(schedule.examDate).toDateString() %></span>
                </div>
              </div>
              <div class="schedule-detail">
                <div class="detail-icon">
                  <i class="fas fa-clock"></i>
                </div>
                <div class="detail-info">
                  <span class="detail-label">Time</span>
                  <span class="detail-value"><%= schedule.examTime %></span>
                </div>
              </div>
              <div class="schedule-detail">
                <div class="detail-icon">
                  <i class="fas fa-map-marker-alt"></i>
                </div>
                <div class="detail-info">
                  <span class="detail-label">Location</span>
                  <span class="detail-value"><%= schedule.location %></span>
                </div>
              </div>
            </div>
          </div>
        <% } %>
      </div>
    </div>
  </div>
  
  <script src="/js/script.js"></script>
</body>
</html>