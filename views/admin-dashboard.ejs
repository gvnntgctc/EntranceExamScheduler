<!DOCTYPE html>
<html>
<head>
  <title>Admin Dashboard</title>
  <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <!-- Overlay -->
  <div class="sidebar-overlay" id="sidebarOverlay"></div>

  <button class="hamburger" id="hamburger"><i class="fas fa-bars"></i></button>
  
  <!-- Sidebar (Hidden by default) -->
  <div class="sidebar" id="sidebar">
    
    
    <div class="sidebar-header">
      <h2><i class="fas fa-cogs"></i> Admin Panel</h2>
    </div>
    <ul class="sidebar-menu">
      <li><a href="/admin" class="active"><i class="fas fa-tachometer-alt"></i> Dashboard</a></li>
      <li><a href="#add-schedule"><i class="fas fa-plus-circle"></i> Add Schedule</a></li>
      <li><a href="#schedules"><i class="fas fa-calendar-alt"></i> View Schedules</a></li>
      <li><a href="/auth/logout"><i class="fas fa-sign-out-alt"></i> Logout</a></li>
    </ul>
  </div>
  
  <!-- Main Content -->
  <div class="main-content">
    
    <div class="container">
      <h1><i class="fas fa-calendar-plus"></i> Manage Schedules</h1>
      
      <% if (error && error.length > 0) { %>
        <div class="message error">
          <i class="fas fa-exclamation-triangle"></i> <%= error %>
        </div>
      <% } %>
      
      <% if (success && success.length > 0) { %>
        <div class="message success">
          <i class="fas fa-check-circle"></i> <%= success %>
        </div>
      <% } %>
      
      <!-- Add Schedule Section -->
      <div id="add-schedule" class="section-card">
        <h2><i class="fas fa-plus"></i> Add New Schedule</h2>
        <form action="/admin/add-schedule" method="POST" class="schedule-form">
          <div class="form-group">
            <label for="studentUsername"><i class="fas fa-user"></i> Student Username</label>
            <input type="text" id="studentUsername" name="studentUsername" placeholder="Enter exact student username" required>
          </div>
          <div class="form-group">
            <label for="examDate"><i class="fas fa-calendar"></i> Exam Date</label>
            <input type="date" id="examDate" name="examDate" required>
          </div>
          <div class="custom-timepicker" id="customTimepicker">
  <label>ENTER TIME</label>
  <div class="timepicker-panel">
    <div class="timepart hour-part">
      <input type="number" id="hourInput" class="time-input" min="1" max="12" maxlength="2" value="12" />
      <small>Hour</small>
    </div>
    <div class="separator">:</div>
    <div class="timepart minute-part">
      <input type="number" id="minuteInput" class="time-input" min="0" max="59" maxlength="2" value="00" />
      <small>Minute</small>
    </div>
    <div class="ampm-part">
      <button type="button" class="ampm-btn active" id="amBtn">AM</button>
      <button type="button" class="ampm-btn" id="pmBtn">PM</button>
    </div>
  </div>

  <div class="action-buttons">
    <button type="button" class="btn-cancel" id="cancelBtn">CANCEL</button>
    <button type="button" class="btn-ok" id="okBtn">OK</button>
  </div>

  <!-- Hidden input to submit selected time -->
  <input type="hidden" id="examTimeInput" name="examTime" value="12:00 AM" />
</div>

          <div class="form-group">
            <label for="location"><i class="fas fa-map-marker-alt"></i> Location</label>
            <input type="text" id="location" name="location" placeholder="e.g., Room 101" required>
          </div>
          <button type="submit" class="btn btn-primary"><i class="fas fa-plus"></i> Add Schedule</button>
        </form>
      </div>
      
      <!-- Existing Schedules Section -->
      <div id="schedules" class="section-card">
        <h2><i class="fas fa-list"></i> Existing Schedules</h2>
        <% if (schedules.length === 0) { %>
          <div class="no-data">
            <i class="fas fa-calendar-times"></i>
            <p>No schedules found. Add a new schedule above.</p>
          </div>
        <% } else { %>
          <ul class="schedule-list">
            <% schedules.forEach(schedule => { %>
              <% if (schedule.studentId) { %>
                <li>
                  <div class="schedule-info">
                    <i class="fas fa-calendar-check"></i>
                    <div class="schedule-details">
                      <strong><%= schedule.studentId.username %></strong>
                      <span><i class="fas fa-calendar"></i> <%= schedule.examDate.toDateString() %></span>
                      <span><i class="fas fa-clock"></i> <%= schedule.examTime %></span>
                      <span><i class="fas fa-map-marker-alt"></i> <%= schedule.location %></span>
                    </div>
                  </div>
                  <div class="schedule-actions">
                    <a href="/admin/edit-schedule/<%= schedule._id %>" class="btn edit-btn"><i class="fas fa-edit"></i> Edit</a>
                    <form action="/admin/delete-schedule" method="POST" style="display: inline;">
                      <input type="hidden" name="scheduleId" value="<%= schedule._id %>">
                      <button type="submit" class="btn delete-btn" onclick="return confirm('Are you sure you want to delete this schedule?')"><i class="fas fa-trash"></i> Delete</button>
                    </form>
                  </div>
                </li>
              <% } %>
            <% }) %>
          </ul>
        <% } %>
      </div>
    </div>
  </div>
  
  <script src="/js/script.js"></script>
</body>
</html>